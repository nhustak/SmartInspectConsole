<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\SmartInspectConsole.Core\SmartInspectConsole.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\smartinspectconsole.ico" />
