    <UseWPF>true</UseWPF>
    <Version>1.0.0.18</Version>
    <AssemblyVersion>1.0.0.18</AssemblyVersion>
    <FileVersion>1.0.0.18</FileVersion>
    <Product>SmartInspect Console</Product>
    <Company>Nick Hustak</Company>
    <Copyright>Copyright (c) 2026 Nick Hustak</Copyright>
    <Description>WPF replacement console for SmartInspect real-time logging</Description>
    <ApplicationIcon>Resources\smartinspectconsole.ico</ApplicationIcon>
  </PropertyGroup>

</Project>
