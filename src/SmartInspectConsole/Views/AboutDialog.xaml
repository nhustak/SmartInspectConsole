<Window x:Class="SmartInspectConsole.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About SmartInspect Console"
        Icon="/Resources/smartinspectconsole.png"
        Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0"
               Source="/Resources/smartinspectconsole.png"
               Width="64" Height="64"
               HorizontalAlignment="Center"
               Margin="0,0,0,16"/>

        <!-- Title -->
        <TextBlock Grid.Row="1"
                   Text="SmartInspect Console"
                   FontSize="22"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource ForegroundBrush}"/>

        <!-- Version -->
        <TextBlock Grid.Row="2"
                   x:Name="VersionText"
                   FontSize="13"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                   Margin="0,4,0,16"/>

        <!-- Description -->
        <StackPanel Grid.Row="3" VerticalAlignment="Center">
            <TextBlock Text="A modern replacement console for SmartInspect logging."
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="{DynamicResource ForegroundBrush}"
                       Margin="0,0,0,12"/>

            <TextBlock TextAlignment="Center" Margin="0,0,0,8">
                <Hyperlink NavigateUri="https://github.com/nhustak/SmartInspectConsole"
                           RequestNavigate="Hyperlink_RequestNavigate"
                           Foreground="{DynamicResource AccentBrush}">
                    github.com/nhustak/SmartInspectConsole
                </Hyperlink>
            </TextBlock>

            <TextBlock Text="Built with Claude Code"
                       FontSize="11"
                       TextAlignment="Center"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="4"
                Content="Close"
                Width="80"
                HorizontalAlignment="Center"
                Click="Close_Click"
                Background="{DynamicResource SurfaceBrush}"
                Foreground="{DynamicResource ForegroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="12,6"/>
    </Grid>
</Window>
