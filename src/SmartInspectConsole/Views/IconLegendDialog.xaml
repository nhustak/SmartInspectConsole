<Window x:Class="SmartInspectConsole.Views.IconLegendDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Icon Legend"
        Icon="/Resources/smartinspectconsole.png"
        Height="480" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="IconStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="16">
        <!-- Close button at bottom -->
        <Button DockPanel.Dock="Bottom" Content="Close" IsCancel="True"
                HorizontalAlignment="Right" Padding="16,6" Margin="0,16,0,0"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Log Entry Type Icons" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                <!-- Log Levels -->
                <TextBlock Text="Log Levels" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,0,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2709;" Style="{StaticResource IconStyle}" Foreground="#2196F3"/>
                    <TextBlock Text="Message - General information" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x26A0;" Style="{StaticResource IconStyle}" Foreground="#FF9800"/>
                    <TextBlock Text="Warning - Potential issues" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2716;" Style="{StaticResource IconStyle}" Foreground="#F44336"/>
                    <TextBlock Text="Error - Errors that need attention" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2620;" Style="{StaticResource IconStyle}" Foreground="#9C27B0"/>
                    <TextBlock Text="Fatal - Critical failures" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2699;" Style="{StaticResource IconStyle}" Foreground="#607D8B"/>
                    <TextBlock Text="Debug - Debug information" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x270E;" Style="{StaticResource IconStyle}" Foreground="#9E9E9E"/>
                    <TextBlock Text="Verbose - Detailed trace info" Style="{StaticResource LabelStyle}"/>
                </StackPanel>

                <!-- Method Flow -->
                <TextBlock Text="Method Flow" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,16,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2192;" Style="{StaticResource IconStyle}" Foreground="#4CAF50"/>
                    <TextBlock Text="Enter Method - Method entry" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2190;" Style="{StaticResource IconStyle}" Foreground="#8BC34A"/>
                    <TextBlock Text="Leave Method - Method exit" Style="{StaticResource LabelStyle}"/>
                </StackPanel>

                <!-- Special Types -->
                <TextBlock Text="Special Types" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,16,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2713;" Style="{StaticResource IconStyle}" Foreground="#00BCD4"/>
                    <TextBlock Text="Checkpoint - Execution markers" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2757;" Style="{StaticResource IconStyle}" Foreground="#FF5722"/>
                    <TextBlock Text="Assert - Assertion checks" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2500;" Style="{StaticResource IconStyle}" Foreground="#787878"/>
                    <TextBlock Text="Separator - Visual separator" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x270D;" Style="{StaticResource IconStyle}" Foreground="#2196F3"/>
                    <TextBlock Text="Comment - Developer comments" Style="{StaticResource LabelStyle}"/>
                </StackPanel>

                <!-- Data Types -->
                <TextBlock Text="Data Types" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundSecondaryBrush}" Margin="0,16,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2261;" Style="{StaticResource IconStyle}" Foreground="#BDBDBD"/>
                    <TextBlock Text="Text / Source / Variable" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2630;" Style="{StaticResource IconStyle}" Foreground="#BDBDBD"/>
                    <TextBlock Text="Binary - Raw binary data" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2318;" Style="{StaticResource IconStyle}" Foreground="#BDBDBD"/>
                    <TextBlock Text="Graphic / Web Content" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Text="&#x2B1B;" Style="{StaticResource IconStyle}" Foreground="#BDBDBD"/>
                    <TextBlock Text="Object - Object data" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
