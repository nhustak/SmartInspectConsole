<Window x:Class="SmartInspectConsole.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings"
        Height="310" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="0,4"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="16">
        <!-- Buttons - docked at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" IsDefault="True" Click="OK_Click"/>
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>

        <StackPanel>
            <!-- Network Settings -->
            <GroupBox Header="Network Settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="TCP Port:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="TcpPortTextBox"
                             Width="120" HorizontalAlignment="Left"
                             ToolTip="TCP port to listen on (default: 4228)"/>
                    <Button Grid.Column="2" Grid.Row="0" Content="Default" Click="DefaultPort_Click" Padding="8,4"/>

                    <Label Grid.Column="0" Grid.Row="2" Content="Pipe Name:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Grid.Row="2" x:Name="PipeNameTextBox"
                             Width="120" HorizontalAlignment="Left"
                             ToolTip="Named pipe name (default: smartinspect)"/>
                    <Button Grid.Column="2" Grid.Row="2" Content="Default" Click="DefaultPipe_Click" Padding="8,4"/>

                    <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}"
                               FontSize="11"
                               TextWrapping="Wrap">
                        Note: Changes require stopping and restarting the listeners.
                    </TextBlock>
                </Grid>
            </GroupBox>

            <!-- Info -->
            <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1"
                    Padding="8" CornerRadius="4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x2139;" FontSize="16" Foreground="#1976D2" Margin="0,0,8,0" VerticalAlignment="Top"/>
                    <TextBlock TextWrapping="Wrap" Foreground="#1565C0" FontSize="12">
                        <Run FontWeight="Bold">SmartInspect Defaults:</Run>
                        <LineBreak/>
                        TCP Port: 4228 | Named Pipe: smartinspect
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </DockPanel>
</Window>
